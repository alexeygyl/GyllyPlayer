<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.smit.sadr.MainActivity"
    android:weightSum="1">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:id="@+id/listViewMusic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="#00ffffff">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/MusicName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30px"
        android:layout_marginTop="10px"
        android:singleLine="true"
        android:textSize="23px" >
    </TextView>
    <TextView
        android:id="@+id/MusicAuthor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MusicName2"
        android:layout_marginLeft="30px"
        android:textSize="16px">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mDuration"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="10px"
        android:textColor="@color/white"
        android:text="00:00"
        android:textSize="23px"/>

</RelativeLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:progressDrawable="@drawable/verticalprogressbar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:layout_gravity="end"
        >

        <ImageButton
            android:id="@+id/Mplay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/MplayNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="90dp"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/MLoop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/white"
             />

        <ImageButton
            android:id="@+id/MplayPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:background="@color/white" />
    </RelativeLayout>

</LinearLayout>
